definitions:
  Group:
    required:
      - name
    type: object
    properties:
      id:
        title: Id
        type: integer
      name:
        title: Name
        type: string
        maxLength: 150
        minLength: 1
      permissions:
        type: array
        items:
          type: integer
        uniqueItems: true
  User:
    required:
      - groups
      - password
      - username
    type: object
    properties:
      id:
        title: Id
        type: integer
      groups:
        type: array
        items:
          $ref: '#/definitions/Group'
      password:
        title: Password
        type: string
        maxLength: 128
        minLength: 1
      last_login:
        title: Last login
        type: string
        format: date-time
        x-nullable: true
      is_superuser:
        title: Superuser status
        description: Designates that this user has all permissions without explicitly
          assigning them.
        type: boolean
      username:
        title: Username
        description: Required. 150 characters or fewer. Letters, digits and @/./+/-/_
          only.
        type: string
        maxLength: 150
        minLength: 1
      first_name:
        title: First name
        type: string
        maxLength: 150
      last_name:
        title: Last name
        type: string
        maxLength: 150
      email:
        title: Email address
        type: string
        format: email
        maxLength: 254
