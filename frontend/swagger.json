swagger: '2.0'
info:
  title: BTS API
  description: API for the BTS Application
  termsOfService: https://www.google.com/policies/terms/
  contact:
    email: contact@snippets.local
  license:
    name: BSD License
  version: v1
host: localhost:8000
schemes:
