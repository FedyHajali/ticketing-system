        in: path
        required: true
        type: string
  /api/ticket-create/:
    post:
      operationId: api_ticket-create_create
      summary: Ticket Creation
      description: Creation of a new Ticket
      parameters:
        - name: data
          in: body
          required: true
          schema:
            $ref: '#/definitions/Ticket'
      responses:
        '200':
          description: OK
          schema:
            $ref: '#/definitions/Ticket'
